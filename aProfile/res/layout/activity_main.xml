<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/currentProfile"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="#55bc75"
            android:text="Large Text"
            android:textColor="#FFFFFF"
            android:gravity="bottom"
            android:textSize="32sp" />

        <LinearLayout
            android:id="@+id/desiredPreferences"
           	android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#4daf7c"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="425dp" >
        </ListView>
    </LinearLayout>

    <Button
        android:id="@+id/button_scan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button_confirm"
        android:onClick="scanButton"
        android:text="Connect to wifi" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="confirmButton"
        android:text="Comfirm" />

</RelativeLayout>